file = {:C$\backslash$:/Users/alanf/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Pingree, Sinha, Griffiths - 1999 - Seasonality of the European slope current (Goban Spur) and ocean margin exchange(2).pdf:pdf},
