journal = {Journal of Marine Systems},
keywords = {Crab larvae,Dispersal distance,Larval dispersal,Western Iberia},
month = {nov},
number = {1-2},
pages = {215--236},
title = {{A study of crab larvae dispersal on the Western Iberian Shelf: Physical processes}},
url = {http://www.sciencedirect.com/science/article/pii/S0924796306003484},
volume = {68},
